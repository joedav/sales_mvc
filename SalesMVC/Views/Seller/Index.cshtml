@model IEnumerable<Seller>
@{
    ViewData["Title"] = "Sellers";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">New Seller</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
             <th>@Html.DisplayNameFor(model => model.BirthDate)</th>
            <th>@Html.DisplayNameFor(model => model.Department.Name)</th>
            <th>@Html.DisplayNameFor(model => model.BaseSalary)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var seller in Model)
        {
            <tr class="table-primary">
                <td>@Html.DisplayFor(item => seller.Name)</td>
                <td>@Html.DisplayFor(item => seller.Email)</td>
                <td>@Html.DisplayFor(item => seller.BirthDate)</td>
                <td>@Html.DisplayFor(item => seller.Department.Id)</td>
                <td>@Html.DisplayFor(item => seller.BaseSalary)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@seller.Id">Edit</a>
                    <a asp-action="Datails" asp-route-id="@seller.Id">Datails</a>
                    <a asp-action="Delete" asp-route-id="@seller.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>