@model SalesMVC.Models.ViewModel.SellerFormViewModel
@{
    ViewData["Title"] = "Create";
}

<h1>@ViewData["Title"]</h1>

<h4>Seller</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Seller.Name" class="control-label"></label>
                <input asp-for="Seller.Name" class="form-control" placeholder="Name" />
            </div>
            <div class="form-group">
                <label asp-for="Seller.Email" class="control-label"></label>
                <input asp-for="Seller.Email" class="form-control" placeholder="Email" />
            </div>
            <div class="row form-group">
                <div class="col-5">
                    <label asp-for="Seller.BirthDate" class="control-label"></label>
                    <input asp-for="Seller.BirthDate" class="form-control" placeholder="BirthDate" />
                </div>
                <div class="col-5">
                    <label asp-for="Seller.DepartmentId" class="control-label"></label>
                    <select asp-for="Seller.DepartmentId" asp-items="@(new SelectList(Model.Departments, "Id", "Name" ))" class="form-control"></select>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Seller.BaseSalary" class="control-label"></label>
                <input asp-for="Seller.BaseSalary" class="form-control" placeholder="Name" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-info" asp-action="Create" />
                <a class="btn btn-primary" asp-action="Index">Back to list</a>
            </div>
        </form>
    </div>
</div>